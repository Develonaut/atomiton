# Husky pre-commit hook

# Pre-commit quality checks
echo "🔍 Running pre-commit quality checks..."

# 1. Format check
echo "📝 Checking code formatting..."
pnpm run format:check
if [ $? -ne 0 ]; then
  echo "❌ Format check failed. Run 'pnpm run format' to fix."
  exit 1
fi

# 2. Lint check
echo "🔧 Running lint check..."
pnpm run lint
if [ $? -ne 0 ]; then
  echo "❌ Lint check failed. Fix the linting errors."
  exit 1
fi

# 3. TypeScript check
echo "🔍 Running TypeScript check..."
pnpm run typecheck
if [ $? -ne 0 ]; then
  echo "❌ TypeScript check failed. Fix the type errors."
  exit 1
fi

# 4. Build check
echo "🔨 Running build check..."
pnpm run build
if [ $? -ne 0 ]; then
  echo "❌ Build check failed. Fix the build errors."
  exit 1
fi

echo "✅ All pre-commit checks passed!"
