# Husky pre-commit hook

# Pre-commit quality checks
echo "ğŸ” Running pre-commit quality checks..."

# 1. Format check
echo "ğŸ“ Checking code formatting..."
npm run format:check
if [ $? -ne 0 ]; then
  echo "âŒ Format check failed. Run 'npm run format' to fix."
  exit 1
fi

# 2. Lint check
echo "ğŸ”§ Running lint check..."
npm run lint
if [ $? -ne 0 ]; then
  echo "âŒ Lint check failed. Fix the linting errors."
  exit 1
fi

# 3. TypeScript check
echo "ğŸ” Running TypeScript check..."
npm run typecheck
if [ $? -ne 0 ]; then
  echo "âŒ TypeScript check failed. Fix the type errors."
  exit 1
fi

# 4. Build check
echo "ğŸ”¨ Running build check..."
npm run build
if [ $? -ne 0 ]; then
  echo "âŒ Build check failed. Fix the build errors."
  exit 1
fi

echo "âœ… All pre-commit checks passed!"
