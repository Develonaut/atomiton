{
  "name": "@atomiton/root",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "pnpm kill && pnpm kill:electron && turbo run dev --filter=\"@atomiton/client\" --filter=\"@atomiton/desktop\" --filter=\"@atomiton/nodes\" --filter=\"@atomiton/editor\" --filter=\"@atomiton/store\"",
    "dev:client": "turbo run dev --filter=\"@atomiton/client\" --filter=\"@atomiton/editor\"",
    "dev:desktop": "turbo run dev --filter=\"@atomiton/desktop\"",
    "dev:ui": "turbo run dev:serve --filter=\"@atomiton/ui\"",
    "dev:editor": "turbo run dev:serve --filter=\"@atomiton/editor\"",
    "dev:form": "turbo run dev:serve --filter=\"@atomiton/form\"",
    "dev:conductor": "turbo run dev --filter=\"@atomiton/conductor\"",
    "dev:storage": "turbo run dev --filter=\"@atomiton/storage\"",
    "fix": "pnpm run format && pnpm run lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md}\"",
    "lint:fix": "turbo run lint:fix",
    "kill": "tsx scripts/cross-platform-kill.ts",
    "kill:ports": "tsx scripts/cross-platform-kill.ts ports",
    "kill:electron": "tsx scripts/cross-platform-kill.ts electron",
    "kill:all": "tsx scripts/cross-platform-kill.ts all",
    "lint": "turbo run lint",
    "precommit": "pnpm run fix",
    "prepare": "husky",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:smoke": "turbo run test:smoke",
    "test:benchmark": "turbo run test:benchmark",
    "test:e2e": "cd apps/client && pnpm test:e2e",
    "test:all": "turbo run test:all && pnpm test:e2e",
    "test:dashboard": "tsx scripts/test-dashboard.ts",
    "test:speed-check": "tsx scripts/test-speed-check.ts",
    "benchmark:compare": "tsx scripts/benchmark-compare.ts",
    "typecheck": "turbo run typecheck",
    "knip": "knip",
    "knip:fix": "knip --fix",
    "knip:production": "knip --config knip.production.json",
    "knip:dependencies": "knip --dependencies",
    "knip:unused-exports": "knip --exports",
    "knip:unused-types": "knip --types",
    "validate": "turbo run validate",
    "validate:packages": "tsx scripts/validate-packages.ts",
    "validate:knip": "knip --config knip.packages.json"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "cross-env": "^10.0.0",
    "eslint": "^9.34.0",
    "husky": "^9.1.7",
    "kill-port": "^2.0.1",
    "knip": "^5.63.1",
    "lint-staged": "^16.1.6",
    "playwright": "^1.55.0",
    "prettier": "^3.6.2",
    "tsx": "^4.20.5",
    "turbo": "^2.5.6",
    "typescript": "5.9.2",
    "vitest": "^2.0.0"
  },
  "packageManager": "pnpm@9.14.4",
  "engines": {
    "node": ">=18"
  }
}
