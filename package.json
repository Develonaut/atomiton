{
  "name": "@atomiton/root",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "pnpm kill-dev && turbo run dev --filter=\"@atomiton/client\" --filter=\"@atomiton/desktop\" --filter=\"@atomiton/ui\" --filter=\"@atomiton/editor\"",
    "dev:client": "turbo run dev --filter=\"@atomiton/client\" --filter=\"@atomiton/editor\"",
    "dev:desktop": "turbo run dev --filter=\"@atomiton/desktop\"",
    "dev:ui": "turbo run dev --filter=\"@atomiton/ui\"",
    "dev:editor": "turbo run dev --filter=\"@atomiton/editor\"",
    "fix": "pnpm run format && pnpm run lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md}\"",
    "lint:fix": "turbo run lint:fix",
    "kill-dev": "pnpm kill-electron && pnpm kill-ports",
    "kill-electron": "pkill -f 'electron|Electron' 2>/dev/null; echo '✅ Electron processes terminated!'",
    "kill-ports": "lsof -ti :5173 -ti :5174 -ti :5175 -ti :3000 -ti :8080 | xargs kill -9 2>/dev/null; echo '✅ All ports freed!'",
    "lint": "turbo run lint",
    "precommit": "pnpm run fix",
    "prepare": "husky",
    "test:e2e": "playwright test -c playwright/playwright.config.ts",
    "test:e2e:debug": "playwright test -c playwright/playwright.config.ts --debug",
    "test:e2e:smoke": "playwright test -c playwright/playwright.config.ts tests/smoke.spec.ts",
    "test:e2e:ui": "playwright test -c playwright/playwright.config.ts --ui",
    "test:install": "playwright install chromium",
    "typecheck": "turbo run typecheck"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/node": "^20.0.0",
    "eslint": "^9.34.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "playwright": "^1.55.0",
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "5.9.2",
    "vite": "^7.1.4",
    "vitest": "^2.0.0"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
