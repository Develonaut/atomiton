{
  "name": "@atomiton/root",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "pnpm kill && turbo run dev --filter=\"@atomiton/client\" --filter=\"@atomiton/desktop\" --filter=\"@atomiton/ui\" --filter=\"@atomiton/editor\" --filter=\"@atomiton/conductor\" --filter=\"@atomiton/storage\"",
    "dev:client": "turbo run dev --filter=\"@atomiton/client\" --filter=\"@atomiton/editor\"",
    "dev:desktop": "turbo run dev --filter=\"@atomiton/desktop\"",
    "dev:ui": "turbo run dev --filter=\"@atomiton/ui\"",
    "dev:editor": "turbo run dev --filter=\"@atomiton/editor\"",
    "dev:conductor": "turbo run dev --filter=\"@atomiton/conductor\"",
    "dev:storage": "turbo run dev --filter=\"@atomiton/storage\"",
    "fix": "pnpm run format && pnpm run lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md}\"",
    "lint:fix": "turbo run lint:fix",
    "kill": "pkill -f electron > /dev/null 2>&1 || true && lsof -ti:5173,5174,5175,3000,8080 | xargs -r kill -9 > /dev/null 2>&1 || true",
    "kill:ports": "kill-port --port 5173,5174,5175,3000,8080",
    "kill:electron": "pkill -f electron || true",
    "lint": "turbo run lint",
    "precommit": "pnpm run fix",
    "prepare": "husky",
    "test": "turbo run test",
    "test:unit": "turbo run test",
    "test:e2e": "playwright test -c playwright/playwright.config.ts",
    "test:e2e:smoke": "playwright test -c playwright/playwright.config.ts tests/smoke/",
    "test:e2e:debug": "playwright test -c playwright/playwright.config.ts --debug",
    "test:e2e:ui": "playwright test -c playwright/playwright.config.ts --ui",
    "test:install": "playwright install chromium",
    "typecheck": "turbo run typecheck",
    "knip": "knip",
    "knip:fix": "knip --fix",
    "knip:production": "knip --config knip.production.json",
    "knip:dependencies": "knip --dependencies",
    "knip:unused-exports": "knip --exports",
    "knip:unused-types": "knip --types"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/node": "^20.0.0",
    "cross-env": "^10.0.0",
    "eslint": "^9.34.0",
    "husky": "^9.1.7",
    "kill-port": "^2.0.1",
    "knip": "^5.63.1",
    "lint-staged": "^16.1.6",
    "playwright": "^1.55.0",
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "5.9.2",
    "vite": "^7.1.4",
    "vitest": "^2.0.0"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
