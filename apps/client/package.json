{
  "name": "@atomiton/client",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "vite build",
    "clean": "rm -rf dist",
    "dev": "vite",
    "dev:all": "./scripts/kill-dev-servers.sh && npm run dev & wait",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,json}\"",
    "kill:servers": "./scripts/kill-dev-servers.sh",
    "knip": "knip",
    "knip:fix": "knip --fix",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare-commit": "./scripts/prepare-commit.sh",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:install": "playwright install",
    "test:snapshots": "./scripts/kill-dev-servers.sh && ./scripts/start-dev-servers.sh && playwright test tests/snapshots.spec.ts --update-snapshots",
    "test:snapshots:auto": "./scripts/run-snapshot-tests.sh --update",
    "test:snapshots:compare": "./scripts/generate-comparison-screenshots.sh",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@atomiton/core": "workspace:^",
    "@atomiton/editor": "workspace:*",
    "@atomiton/hooks": "workspace:^",
    "@atomiton/ui": "workspace:*",
    "@headlessui/react": "^2.2.4",
    "framer-motion": "^12.17.0",
    "rc-slider": "^11.1.8",
    "react": "^19.0.0",
    "react-animate-height": "^3.2.3",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.62.0",
    "react-hot-toast": "^2.5.2",
    "react-plock": "^3.5.1",
    "react-router-dom": "^7.8.2",
    "react-textarea-autosize": "^8.5.9",
    "react-tooltip": "^5.29.0",
    "react-use": "^17.6.0",
    "swiper": "^11.2.8",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@atomiton/eslint-config": "workspace:^",
    "@atomiton/typescript-config": "workspace:^",
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.55.0",
    "@tailwindcss/vite": "^4.1.12",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "@vitejs/plugin-react": "^5.0.2",
    "eslint": "^9",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "tailwindcss": "^4.0.0",
    "typescript": "^5",
    "vite": "^7.1.4",
    "vite-tsconfig-paths": "^5.1.4"
  }
}
