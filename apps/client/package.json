{
  "name": "@atomiton/client",
  "version": "0.1.1",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "check-types": "tsc --noEmit",
    "typecheck": "tsc --noEmit",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,json}\"",
    "format:fix": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "prepare-commit": "./scripts/prepare-commit.sh",
    "test": "pnpm test:unit",
    "test:unit": "vitest run",
    "test:smoke": "vitest run src/__tests__/smoke",
    "test:benchmark": "vitest bench --run || echo 'No benchmark tests yet'",
    "test:e2e": "playwright test",
    "test:all": "pnpm test:unit && pnpm test:smoke && pnpm test:benchmark && pnpm test:e2e",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "kill:servers": "npm run kill:ports",
    "kill": "kill-port --port 5173 || true",
    "kill:ports": "kill-port --port 5173,5174,5175 || true"
  },
  "dependencies": {
    "@atomiton/editor": "workspace:*",
    "@atomiton/form": "workspace:*",
    "@atomiton/hooks": "workspace:*",
    "@atomiton/nodes": "workspace:*",
    "@atomiton/router": "workspace:*",
    "@atomiton/store": "workspace:*",
    "@atomiton/ui": "workspace:*",
    "@atomiton/utils": "workspace:*",
    "@headlessui/react": "^2.2.4",
    "framer-motion": "^12.17.0",
    "rc-slider": "^11.1.8",
    "react": "catalog:",
    "react-animate-height": "^3.2.3",
    "react-dom": "catalog:",
    "react-error-boundary": "^6.0.0",
    "react-hot-toast": "^2.5.2",
    "react-plock": "^3.5.1",
    "react-textarea-autosize": "^8.5.9",
    "react-tooltip": "^5.29.0",
    "react-use": "^17.6.0",
    "swiper": "^11.2.8",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@atomiton/eslint-config": "workspace:^",
    "@atomiton/typescript-config": "workspace:^",
    "@playwright/test": "^1.55.0",
    "@tailwindcss/vite": "^4.1.12",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "catalog:",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "@vitejs/plugin-react": "catalog:",
    "eslint": "catalog:",
    "jsdom": "^25.0.1",
    "kill-port": "^2.0.1",
    "tailwindcss": "^4.1.13",
    "typescript": "catalog:",
    "vite": "catalog:",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^2.0.0"
  }
}
