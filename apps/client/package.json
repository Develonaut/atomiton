{
  "name": "@atomiton/client",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "check-types": "tsc --noEmit",
    "typecheck": "tsc --noEmit",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,json}\"",
    "format:fix": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "prepare-commit": "./scripts/prepare-commit.sh",
    "test": "playwright test",
    "test:unit": "echo 'No unit tests configured for client app'",
    "test:smoke": "playwright test tests/smoke.spec.ts",
    "test:benchmark": "echo 'No benchmark tests configured for client app'",
    "test:all": "playwright test",
    "test:watch": "playwright test --watch",
    "test:coverage": "echo 'No coverage tests configured for client app'",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:snapshots": "npm run kill:ports && npm run dev & playwright test tests/snapshots.spec.ts --update-snapshots",
    "test:snapshots:auto": "playwright test --update-snapshots",
    "test:snapshots:compare": "playwright test tests/snapshots.spec.ts",
    "test:install": "playwright install",
    "kill:servers": "npm run kill:ports",
    "kill": "kill-port --port 5173 || true",
    "kill:ports": "kill-port --port 5173,5174,5175 || true"
  },
  "dependencies": {
    "@atomiton/editor": "workspace:*",
    "@atomiton/form": "workspace:*",
    "@atomiton/hooks": "workspace:^",
    "@atomiton/nodes": "workspace:*",
    "@atomiton/store": "workspace:^",
    "@atomiton/ui": "workspace:*",
    "@atomiton/yaml": "workspace:*",
    "@headlessui/react": "^2.2.4",
    "framer-motion": "^12.17.0",
    "rc-slider": "^11.1.8",
    "react": "catalog:",
    "react-animate-height": "^3.2.3",
    "react-dom": "catalog:",
    "react-error-boundary": "^6.0.0",
    "react-hot-toast": "^2.5.2",
    "react-plock": "^3.5.1",
    "react-router-dom": "^7.8.2",
    "react-textarea-autosize": "^8.5.9",
    "react-tooltip": "^5.29.0",
    "react-use": "^17.6.0",
    "swiper": "^11.2.8"
  },
  "devDependencies": {
    "@atomiton/eslint-config": "workspace:^",
    "@atomiton/typescript-config": "workspace:^",
    "@playwright/test": "^1.55.0",
    "@tailwindcss/vite": "^4.1.12",
    "@types/node": "catalog:",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "@vitejs/plugin-react": "catalog:",
    "eslint": "catalog:",
    "kill-port": "^2.0.1",
    "tailwindcss": "^4.1.13",
    "typescript": "catalog:",
    "vite": "catalog:",
    "vite-tsconfig-paths": "^5.1.4"
  }
}
