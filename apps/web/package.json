{
  "name": "@atomiton/web",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "dev:vite": "vite",
    "build:vite": "vite build",
    "preview:vite": "vite preview",
    "lint": "next lint --max-warnings 0",
    "lint:fix": "next lint --fix",
    "check-types": "tsc --noEmit",
    "typecheck": "tsc --noEmit",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,json}\"",
    "format:fix": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:snapshots": "./scripts/kill-dev-servers.sh && ./scripts/start-dev-servers.sh && playwright test tests/snapshots.spec.ts --update-snapshots",
    "test:snapshots:auto": "./scripts/run-snapshot-tests.sh --update",
    "test:install": "playwright install",
    "kill:servers": "./scripts/kill-dev-servers.sh",
    "dev:all": "./scripts/kill-dev-servers.sh && npm run dev & npm run dev:vite & wait"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.4",
    "emoji-picker-react": "^4.12.2",
    "framer-motion": "^12.17.0",
    "next": "15.3.3",
    "rc-slider": "^11.1.8",
    "react": "^19.0.0",
    "react-animate-height": "^3.2.3",
    "react-dom": "^19.0.0",
    "react-hot-toast": "^2.5.2",
    "react-plock": "^3.5.1",
    "react-rnd": "^10.5.2",
    "react-router-dom": "^7.8.2",
    "react-textarea-autosize": "^8.5.9",
    "react-tooltip": "^5.29.0",
    "react-use": "^17.6.0",
    "swiper": "^11.2.8",
    "tailwind-scrollbar": "^4.0.2",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.55.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/react-router-dom": "^5.3.3",
    "@vitejs/plugin-react": "^5.0.2",
    "autoprefixer": "^10.4.21",
    "eslint": "^9",
    "eslint-config-next": "15.3.3",
    "tailwindcss": "3.4.15",
    "typescript": "^5",
    "vite": "^7.1.4",
    "vite-tsconfig-paths": "^5.1.4"
  }
}
