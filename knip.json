{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "workspaces": {
    "packages/@atomiton/ui": {
      "entry": [
        "src/index.ts",
        "src/**/*.stories.tsx"
      ],
      "project": ["src/**/*.{ts,tsx}"]
    },
    "packages/@atomiton/editor": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.{ts,tsx}"]
    },
    "packages/@atomiton/nodes": {
      "entry": ["src/definitions/index.ts", "src/executables/index.ts"],
      "project": ["src/**/*.{ts,tsx}"]
    },
    "packages/@atomiton/store": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.{ts,tsx}"]
    },
    "packages/@atomiton/conductor": {
      "entry": ["src/exports/browser/index.ts", "src/exports/desktop/index.ts"],
      "project": ["src/**/*.{ts,tsx}"]
    },
    "packages/@atomiton/rpc": {
      "entry": ["src/main/index.ts", "src/renderer/index.ts", "src/preload/index.ts", "src/shared/index.ts"],
      "project": ["src/**/*.{ts,tsx}"]
    },
    "packages/@atomiton/storage": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.{ts,tsx}"]
    },
    "packages/@atomiton/router": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.{ts,tsx}"]
    },
    "packages/@atomiton/utils": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.{ts,tsx}"]
    },
    "packages/@atomiton/validation": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.{ts,tsx}"]
    },
    "packages/@atomiton/yaml": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.{ts,tsx}"]
    },
    "packages/@atomiton/events": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.{ts,tsx}"]
    },
    "packages/@atomiton/hooks": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.{ts,tsx}"]
    },
    "packages/@atomiton/eslint-config": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.{ts,tsx}"]
    },
    "packages/@atomiton/typescript-config": {
      "entry": ["base.json", "library.json", "app.json"],
      "project": []
    },
    "apps/client": {
      "entry": ["src/main.tsx"],
      "project": ["src/**/*.{ts,tsx}"]
    },
    "apps/desktop": {
      "entry": ["src/main/index.ts", "src/preload/index.ts"],
      "project": ["src/**/*.{ts,tsx}"]
    }
  },
  "ignore": [
    "**/*.test.{ts,tsx}",
    "**/*.spec.{ts,tsx}",
    "**/test/**",
    "**/tests/**",
    "**/__tests__/**",
    "**/node_modules/**",
    "**/dist/**",
    "**/build/**",
    "**/.turbo/**",
    "playwright/**",
    "**/*.stories.tsx",
    "**/mocks/**",
    "**/fixtures/**",
    "**/templates/**",
    "**/demos/**",
    "**/examples/**"
  ],
  "ignoreExportsUsedInFile": {
    "interface": true,
    "type": true,
    "enum": true
  },
  "ignoreDependencies": ["@atomiton/*"],
  "ignoreWorkspaces": [],
  "rules": {
    "files": "error",
    "dependencies": "error",
    "devDependencies": "warn",
    "optionalPeerDependencies": "off",
    "unlisted": "error",
    "binaries": "warn",
    "unresolved": "off",
    "exports": "warn",
    "types": "off",
    "nsExports": "warn",
    "duplicates": "error"
  },
  "exclude": ["unresolved"]
}
