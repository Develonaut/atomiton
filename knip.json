{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "workspaces": {
    "packages/@atomiton/ui": {
      "entry": [
        "src/index.tsx",
        "src/**/*.stories.tsx",
        "src/templates/**/index.tsx",
        "src/App.tsx"
      ],
      "project": ["src/**/*.{ts,tsx}"]
    },
    "packages/@atomiton/editor": {
      "entry": ["src/index.tsx"],
      "project": ["src/**/*.{ts,tsx}"]
    },
    "packages/@atomiton/nodes": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.{ts,tsx}"]
    },
    "packages/@atomiton/core": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.{ts,tsx}"]
    },
    "packages/@atomiton/store": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.{ts,tsx}"]
    },
    "packages/@atomiton/events": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.{ts,tsx}"]
    },
    "packages/@atomiton/di": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.{ts,tsx}"]
    },
    "packages/@atomiton/hooks": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.{ts,tsx}"]
    },
    "packages/@atomiton/eslint-config": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.{ts,tsx}"]
    },
    "packages/@atomiton/typescript-config": {
      "entry": ["base.json", "node.json", "react.json"],
      "project": []
    },
    "apps/client": {
      "entry": [
        "src/main.tsx",
        "src/routes.tsx"
      ],
      "project": ["src/**/*.{ts,tsx}"],
      "ignoreBinaries": ["kill-dev-servers.sh"]
    },
    "apps/desktop": {
      "entry": [
        "src/main/index.ts",
        "src/preload/index.ts"
      ],
      "project": ["src/**/*.{ts,tsx}"]
    }
  },
  "ignore": [
    "**/*.test.{ts,tsx}",
    "**/*.spec.{ts,tsx}",
    "**/test/**",
    "**/tests/**",
    "**/__tests__/**",
    "**/node_modules/**",
    "**/dist/**",
    "**/build/**",
    "**/.turbo/**",
    "playwright/**",
    "**/*.stories.tsx",
    "**/mocks/**",
    "**/fixtures/**",
    "**/templates/**",
    "**/demos/**",
    "**/examples/**"
  ],
  "ignoreExportsUsedInFile": {
    "interface": true,
    "type": true,
    "enum": true
  },
  "ignoreDependencies": [
    "@atomiton/*",
    "husky",
    "lint-staged",
    "@types/node"
  ],
  "ignoreWorkspaces": [],
  "rules": {
    "files": "error",
    "dependencies": "error",
    "devDependencies": "warn",
    "optionalPeerDependencies": "off",
    "unlisted": "error",
    "binaries": "warn",
    "unresolved": "off",
    "exports": "warn",
    "types": "off",
    "nsExports": "warn",
    "duplicates": "error"
  },
  "exclude": [
    "unresolved"
  ]
}