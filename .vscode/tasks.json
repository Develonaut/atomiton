{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "üöÄ dev",
      "detail": "Start development: app servers (HMR) + library build watch",
      "type": "shell",
      "command": "pnpm dev",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": {
        "owner": "typescript",
        "fileLocation": "relative",
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+) - (error|warning|info)\\s+(TS\\d+): (.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "code": 5,
          "message": 6
        }
      }
    },
    {
      "label": "üñ±Ô∏è dev:desktop",
      "detail": "Start Electron desktop app",
      "type": "shell",
      "command": "pnpm -w run dev:desktop",
      "group": "build",
      "problemMatcher": {
        "owner": "electron",
        "fileLocation": "relative",
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+) - (error|warning)\\s+(.*): (.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "code": 5,
          "message": 6
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "üîå kill-ports",
      "detail": "Kill all processes on dev ports (cross-platform)",
      "type": "shell",
      "command": "pnpm",
      "args": ["kill:ports"],
      "group": "none",
      "problemMatcher": []
    },
    {
      "label": "üß™ Run Specific Test",
      "detail": "Run a specific test file or pattern",
      "type": "shell",
      "command": "pnpm",
      "args": [
        "test",
        "${input:testPattern}"
      ],
      "group": "test",
      "problemMatcher": {
        "owner": "vitest",
        "fileLocation": "relative",
        "pattern": [
          {
            "regexp": "^\\s*(FAIL|ERROR)\\s+(.+)$",
            "severity": 1,
            "file": 2
          },
          {
            "regexp": "^\\s+(.+):(\\d+):(\\d+)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "loop": true
          }
        ]
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    }
  ],
  "inputs": [
    {
      "id": "testPattern",
      "description": "Test file pattern or specific test name",
      "default": "",
      "type": "promptString"
    }
  ]
}
