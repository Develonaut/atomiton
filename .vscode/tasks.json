{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "dev",
      "type": "shell",
      "command": "pnpm dev",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": [],
      "detail": "Start development servers for all apps"
    },
    {
      "label": "build",
      "type": "shell",
      "command": "pnpm build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": ["$tsc"],
      "detail": "Build all packages and apps"
    },
    {
      "label": "lint",
      "type": "shell",
      "command": "pnpm lint",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": ["$eslint-stylish"],
      "detail": "Lint all packages and apps"
    },
    {
      "label": "check-types",
      "type": "shell",
      "command": "pnpm check-types",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": ["$tsc"],
      "detail": "Type check all packages and apps"
    },
    {
      "label": "format",
      "type": "shell",
      "command": "pnpm format",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": [],
      "detail": "Format code with Prettier"
    },
    {
      "label": "dev:web",
      "type": "shell",
      "command": "pnpm --filter @atomiton/web dev",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": [],
      "detail": "Start development server for web app only"
    },
    {
      "label": "Prepare, Commit and Push",
      "type": "shell",
      "command": "cd apps/web && pnpm format:fix && pnpm lint:fix && git add -A && git commit -m \"${input:commitMessage}\" && git push",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": [],
      "detail": "Auto-format, lint-fix, stage all changes, commit with message, and push to remote"
    },
    {
      "label": "Quick Fix",
      "type": "shell",
      "command": "cd apps/web && pnpm format:fix && pnpm lint:fix && git add -A && echo 'âœ… All files formatted, linted, and staged!'",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": [],
      "detail": "Auto-format, lint-fix, and stage all changes (no commit)"
    },
    {
      "label": "build:web",
      "type": "shell",
      "command": "pnpm --filter @atomiton/web build",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": ["$tsc"],
      "detail": "Build web app only"
    },
  ],
  "inputs": [
    {
      "id": "commitMessage",
      "type": "promptString",
      "description": "Enter commit message",
      "default": "chore: update code"
    }
  ]
}