{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "🚀 Dev - Start Everything",
      "type": "shell",
      "command": "pnpm dev",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": [],
      "detail": "Start development servers for all apps 🎉"
    },
    {
      "label": "🏗️ Build All",
      "type": "shell",
      "command": "pnpm build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": ["$tsc"],
      "detail": "Build all packages and apps 📦"
    },
    {
      "label": "✨ Lint Everything",
      "type": "shell",
      "command": "pnpm lint",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": ["$eslint-stylish"],
      "detail": "Make the code sparkle ✨"
    },
    {
      "label": "🔍 Type Check",
      "type": "shell",
      "command": "pnpm check-types",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": ["$tsc"],
      "detail": "TypeScript strict mode check 💪"
    },
    {
      "label": "💅 Format Code",
      "type": "shell",
      "command": "pnpm format",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": [],
      "detail": "Make it pretty with Prettier 🎨"
    },
    {
      "label": "🖥️ Dev - Client Only",
      "type": "shell",
      "command": "pnpm --filter @atomiton/client dev",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": [],
      "detail": "Start the React client app (Next.js for now) 🎯"
    },
    {
      "label": "🖥️ Build - Client",
      "type": "shell",
      "command": "pnpm --filter @atomiton/client build",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": ["$tsc"],
      "detail": "Build client app for production 📦"
    },
    {
      "label": "🖥️ Dev - Desktop",
      "type": "shell",
      "command": "pnpm --filter @atomiton/desktop dev",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": [],
      "detail": "Launch Electron desktop app 🖥️"
    },
    {
      "label": "🔥 Quick Fix & Stage",
      "type": "shell",
      "command": "pnpm format:fix && pnpm lint:fix && git add -A && echo '✅ All files formatted, linted, and staged!'",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": [],
      "detail": "Auto-format, lint-fix, and stage all changes (no commit) 🔧"
    },
    {
      "label": "🚢 Ship It! (Commit & Push)",
      "type": "shell",
      "command": "pnpm format:fix && pnpm lint:fix && git add -A && git commit -m \"${input:commitMessage}\" && git push",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": [],
      "detail": "Format, lint, commit, and push to GitHub 🚀"
    },
    {
      "label": "📸 Visual Snapshots",
      "type": "shell",
      "command": "cd apps/client && pnpm test:snapshots:compare",
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": [],
      "detail": "Compare UI with Brainwave reference 📸"
    },
    {
      "label": "🧪 Test All",
      "type": "shell",
      "command": "pnpm test",
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": [],
      "detail": "Run all tests 🧪"
    },
    {
      "label": "🎨 UI Migration - Mantine",
      "type": "shell",
      "command": "echo 'Ready to migrate to Mantine! Check docs/workspace/strategies/tailwind-to-mantine-migration.md'",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": [],
      "detail": "Start the Tailwind → Mantine migration 🎨"
    },
    {
      "label": "📚 Open Docs",
      "type": "shell",
      "command": "code docs/workspace/CURRENT.md docs/workspace/NEXT.md",
      "group": "none",
      "presentation": {
        "echo": false,
        "reveal": "never",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      },
      "problemMatcher": [],
      "detail": "Open current work tracking docs 📚"
    }
  ],
  "inputs": [
    {
      "id": "commitMessage",
      "type": "promptString",
      "description": "Enter commit message 💬",
      "default": "feat: making it beautiful ✨"
    }
  ]
}