# Strict dependency resolution (matches CI behavior)
# Disables hoisting so packages can only access explicitly declared dependencies
hoist=false

# Allow hoisting only for tools that need to be globally available
public-hoist-pattern[]=*eslint*
public-hoist-pattern[]=*prettier*
public-hoist-pattern[]=*typescript*
public-hoist-pattern[]=*@babel/runtime*
public-hoist-pattern[]=*@lezer/highlight*

# Strict peer dependency handling
strict-peer-dependencies=true

# Auto-install peers to catch peer dependency issues early
auto-install-peers=true
