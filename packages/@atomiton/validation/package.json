{
  "name": "@atomiton/validation",
  "version": "0.1.0",
  "description": "Centralized validation utilities and schema definitions for the Atomiton platform",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "test": "vitest run",
    "test:unit": "vitest run **/*.test.ts",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:smoke": "mkdir -p test-results && vitest run 'smoke' --passWithNoTests --reporter=json > test-results/speed-report.json || echo \"No smoke tests yet\"",
    "test:benchmark": "vitest bench",
    "test:e2e": "echo 'No E2E tests'",
    "test:all": "vitest run && vitest bench"
  },
  "dependencies": {
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@atomiton/eslint-config": "workspace:*",
    "@atomiton/typescript-config": "workspace:*",
    "@types/node": "^20.0.0",
    "@vitest/ui": "^2.1.8",
    "eslint": "^8.57.0",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4",
    "vite": "^5.4.11",
    "vitest": "^2.1.8"
  },
  "publishConfig": {
    "access": "restricted"
  },
  "private": true
}