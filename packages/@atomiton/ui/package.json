{
  "name": "@atomiton/ui",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "development": "./src/index.ts",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./style.css": {
      "development": "./src/index.css",
      "default": "./dist/style.css"
    },
    "./theme/index.css": "./src/theme/index.css",
    "./theme/variables.css": "./src/theme/variables.css",
    "./package.json": "./package.json"
  },
  "scripts": {
    "dev": "vite build --watch",
    "dev:serve": "vite",
    "build": "vite build",
    "clean": "rm -rf dist",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "test": "pnpm test:unit",
    "test:unit": "vitest run",
    "test:smoke": "mkdir -p test-results && vitest run src/**/*.smoke.test.{ts,tsx} --passWithNoTests --reporter=json > test-results/speed-report.json || echo \"No smoke tests yet\"",
    "test:benchmark": "vitest bench --run || echo 'No benchmark tests yet'",
    "test:e2e": "playwright test",
    "test:all": "pnpm test:unit && pnpm test:smoke && pnpm test:benchmark && pnpm test:e2e",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.4",
    "@radix-ui/react-slot": "^1.2.3",
    "@tailwindcss/vite": "^4.1.12",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.542.0",
    "rc-slider": "^11.1.8",
    "react": "catalog:",
    "react-animate-height": "^3.2.3",
    "react-dom": "catalog:",
    "react-router-dom": "^7.8.2",
    "react-textarea-autosize": "^8.5.9",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@atomiton/eslint-config": "workspace:*",
    "@atomiton/typescript-config": "workspace:*",
    "@atomiton/vite-config": "workspace:*",
    "@playwright/test": "^1.55.0",
    "@testing-library/jest-dom": "catalog:",
    "@testing-library/react": "catalog:",
    "@types/node": "catalog:",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "@vitejs/plugin-react": "catalog:",
    "eslint": "catalog:",
    "jsdom": "catalog:",
    "rollup-plugin-visualizer": "catalog:",
    "tailwindcss": "^4.1.13",
    "terser": "catalog:",
    "tsc-alias": "^1.8.16",
    "typescript": "catalog:",
    "vite": "catalog:",
    "vite-plugin-dts": "catalog:",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "catalog:"
  }
}
