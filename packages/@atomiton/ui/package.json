{
  "name": "@atomiton/ui",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./theme/index.css": "./src/theme/index.css",
    "./theme/variables.css": "./src/theme/variables.css"
  },
  "scripts": {
    "dev": "pnpm build:watch",
    "build": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "build:vite": "vite build",
    "build:watch": "concurrently \"tsc -p tsconfig.build.json --watch\" \"tsc-alias -p tsconfig.build.json --watch\"",
    "clean": "rm -rf dist",
    "preview": "vite preview",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:install": "playwright install",
    "test:unit": "vitest",
    "test:unit:watch": "vitest --watch",
    "test:unit:coverage": "vitest --coverage"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.4",
    "@radix-ui/react-slot": "^1.2.3",
    "@tailwindcss/vite": "^4.1.12",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "rc-slider": "^11.1.8",
    "react": "^19.0.0",
    "react-animate-height": "^3.2.3",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.8.2",
    "react-textarea-autosize": "^8.5.9",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@atomiton/eslint-config": "workspace:*",
    "@atomiton/typescript-config": "workspace:*",
    "@playwright/test": "^1.55.0",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^15.0.2",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/react-router-dom": "^5.3.3",
    "@vitejs/plugin-react": "^5.0.2",
    "concurrently": "^8.2.0",
    "eslint": "^9",
    "jsdom": "^24.0.0",
    "tailwindcss": "^4",
    "tsc-alias": "^1.8.16",
    "typescript": "^5",
    "vite": "^7.1.4",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^1.6.0"
  }
}
