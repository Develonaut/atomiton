{
  "name": "@atomiton/ui",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "sideEffects": false,
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "imports": {
    "#*": "./src/*"
  },
  "exports": {
    ".": {
      "development": "./src/index.ts",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./style.css": {
      "development": "./src/index.css",
      "default": "./dist/style.css"
    },
    "./theme/index.css": "./src/theme/index.css",
    "./theme/variables.css": "./src/theme/variables.css",
    "./package.json": "./package.json"
  },
  "scripts": {
    "dev": "vite build --watch",
    "dev:serve": "vite",
    "build": "vite build",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "test:watch": "vitest watch"
  },
  "dependencies": {
    "@atomiton/router": "workspace:*",
    "@babel/runtime": "^7.26.0",
    "@codemirror/lang-javascript": "^6.2.4",
    "@headlessui/react": "^2.2.4",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@uiw/codemirror-theme-vscode": "^4.25.2",
    "@uiw/react-codemirror": "^4.25.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.542.0",
    "rc-slider": "^11.1.8",
    "react": "catalog:",
    "react-animate-height": "^3.2.3",
    "react-dom": "catalog:",
    "react-textarea-autosize": "^8.5.9",
    "tailwind-merge": "^3.3.1"
  },
  "peerDependencies": {
    "react-router-dom": "catalog:"
  },
  "devDependencies": {
    "@atomiton/eslint-config": "workspace:*",
    "@atomiton/typescript-config": "workspace:*",
    "@atomiton/vite-config": "workspace:*",
    "@rollup/plugin-node-resolve": "^16.0.2",
    "@testing-library/jest-dom": "catalog:",
    "@types/node": "catalog:",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "eslint": "catalog:",
    "jsdom": "catalog:",
    "react-router-dom": "catalog:",
    "terser": "catalog:",
    "typescript": "catalog:",
    "vite": "catalog:",
    "vitest": "catalog:"
  }
}
