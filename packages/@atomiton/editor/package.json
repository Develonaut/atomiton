{
  "name": "@atomiton/editor",
  "version": "0.1.0",
  "description": "Atomiton visual editor",
  "type": "module",
  "private": true,
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./style.css": "./dist/style.css"
  },
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build",
    "build:tsc": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "build:watch": "vite build --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "editor",
    "visual",
    "workflow",
    "react-flow"
  ],
  "author": "Atomiton",
  "license": "MIT",
  "dependencies": {
    "@atomiton/core": "workspace:*",
    "@atomiton/hooks": "workspace:*",
    "@atomiton/nodes": "workspace:*",
    "@atomiton/ui": "workspace:*",
    "@xyflow/react": "^12.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@atomiton/eslint-config": "workspace:^",
    "@atomiton/typescript-config": "workspace:*",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^15.0.2",
    "@types/node": "^20.0.0",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.0.2",
    "concurrently": "^8.2.0",
    "eslint": "^9",
    "jsdom": "^24.0.0",
    "tsc-alias": "^1.8.16",
    "typescript": "^5",
    "vite": "^6.0.0",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^2.0.0"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  }
}