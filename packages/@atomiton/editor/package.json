{
  "name": "@atomiton/editor",
  "version": "0.1.0",
  "description": "Atomiton visual editor",
  "type": "module",
  "private": true,
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./styles.css": "./dist/editor.css",
    "./*.css": "./src/*.css",
    "./package.json": "./package.json"
  },
  "scripts": {
    "dev": "vite build --watch",
    "dev:serve": "vite",
    "build": "vite build",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "kill": "echo 'No processes to kill for Editor package'",
    "test:unit": "vitest run",
    "test:smoke": "mkdir -p test-results && vitest run 'smoke' --passWithNoTests --reporter=json > test-results/speed-report.json || echo \"No smoke tests yet\"",
    "test:benchmark": "tsx scripts/run-benchmarks.ts",
    "test:e2e": "echo \"No E2E tests for this package\"",
    "test:all": "pnpm test:unit && pnpm test:smoke && pnpm test:benchmark && pnpm test:e2e",
    "test:pre-push": "pnpm test:benchmark",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "editor",
    "visual",
    "workflow",
    "react-flow"
  ],
  "author": "Atomiton",
  "license": "MIT",
  "dependencies": {
    "@atomiton/hooks": "workspace:*",
    "@atomiton/nodes": "workspace:*",
    "@atomiton/store": "workspace:*",
    "@atomiton/ui": "workspace:*",
    "@atomiton/utils": "workspace:*",
    "@xyflow/react": "^12.0.0",
    "react": "catalog:",
    "react-dom": "catalog:"
  },
  "devDependencies": {
    "@atomiton/eslint-config": "workspace:*",
    "@atomiton/typescript-config": "workspace:*",
    "@atomiton/vite-config": "workspace:*",
    "@testing-library/jest-dom": "catalog:",
    "@testing-library/react": "catalog:",
    "@types/node": "catalog:",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "@vitejs/plugin-react": "catalog:",
    "eslint": "catalog:",
    "jsdom": "catalog:",
    "rollup-plugin-visualizer": "catalog:",
    "terser": "catalog:",
    "typescript": "catalog:",
    "vite": "catalog:",
    "vite-plugin-dts": "catalog:",
    "vitest": "catalog:"
  },
  "peerDependencies": {
    "react": "catalog:",
    "react-dom": "catalog:"
  }
}
