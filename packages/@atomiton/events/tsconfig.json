{
  "extends": "@atomiton/typescript-config/library.json",
  "compilerOptions": {
    "rootDir": "./src",
    "sourceMap": true,
    "baseUrl": "./src",
    "paths": {
      "#core/*": ["core/*"],
      "#browser/*": ["browser/*"],
      "#desktop/*": ["desktop/*"],
      "#shared/*": ["shared/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}
