{
  "name": "@atomiton/events",
  "version": "0.2.0",
  "description": "Event system for Atomiton workflow automation",
  "type": "module",
  "private": true,
  "exports": {
    "./browser": {
      "types": "./dist/browser/index.d.ts",
      "import": "./dist/browser/index.js",
      "require": "./dist/browser/index.cjs"
    },
    "./desktop": {
      "types": "./dist/desktop/index.d.ts",
      "import": "./dist/desktop/index.js",
      "require": "./dist/desktop/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "imports": {
    "#core/*": "./src/core/*",
    "#browser/*": "./src/browser/*",
    "#desktop/*": "./src/desktop/*",
    "#shared/*": "./src/shared/*"
  },
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "test:benchmark": "vitest bench --run"
  },
  "keywords": [
    "events",
    "workflow",
    "automation",
    "eventemitter"
  ],
  "author": "Atomiton",
  "license": "MIT",
  "dependencies": {
    "eventemitter3": "^5.0.0"
  },
  "devDependencies": {
    "@atomiton/eslint-config": "workspace:*",
    "@atomiton/typescript-config": "workspace:*",
    "@atomiton/vite-config": "workspace:*",
    "@types/node": "catalog:",
    "eslint": "catalog:",
    "rollup-plugin-visualizer": "catalog:",
    "terser": "catalog:",
    "typescript": "catalog:",
    "vite": "catalog:",
    "vite-plugin-dts": "catalog:",
    "vitest": "catalog:"
  }
}
