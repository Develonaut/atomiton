{
  "name": "@atomiton/vite-config",
  "version": "0.1.0",
  "description": "Shared Vite configuration for Atomiton packages",
  "type": "module",
  "private": true,
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "imports": {
    "#*": "./src/*"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./vitest": {
      "import": "./dist/vitest.js",
      "require": "./dist/vitest.cjs",
      "types": "./dist/vitest.d.ts"
    },
    "./playwright": {
      "import": "./dist/playwright.js",
      "require": "./dist/playwright.cjs",
      "types": "./dist/playwright.d.ts"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "test:benchmark": "vitest bench --run --passWithNoTests || echo \"No benchmark tests for config package\""
  },
  "dependencies": {
    "@vitejs/plugin-react": "catalog:",
    "rollup-plugin-visualizer": "catalog:",
    "vite": "catalog:",
    "vite-plugin-dts": "catalog:",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "devDependencies": {
    "@atomiton/eslint-config": "workspace:*",
    "@atomiton/typescript-config": "workspace:*",
    "@tailwindcss/vite": "catalog:",
    "@types/node": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "peerDependencies": {
    "vite": "^7.0.0",
    "@playwright/test": "^1.40.0"
  },
  "keywords": [
    "vite",
    "config",
    "build",
    "atomiton"
  ],
  "author": "Atomiton",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/atomiton/atomiton.git",
    "directory": "packages/@atomiton/vite-config"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
