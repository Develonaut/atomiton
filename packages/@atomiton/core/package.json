{
  "name": "@atomiton/core",
  "version": "0.1.0",
  "description": "Atomiton Blueprint core engine and state management",
  "type": "module",
  "private": true,
  "main": "dist/src/index.js",
  "module": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/src/index.js",
      "types": "./dist/src/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "build:vite": "vite build",
    "build:watch": "concurrently \"tsc -p tsconfig.build.json --watch\" \"tsc-alias -p tsconfig.build.json --watch\"",
    "clean": "rm -rf dist",
    "dev": "echo 'No dev server yet - use dev:build for watch mode'",
    "dev:build": "pnpm build:watch",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,json}\"",
    "knip": "knip",
    "knip:fix": "knip --fix",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "core",
    "blueprint",
    "automation",
    "workflow",
    "state-management"
  ],
  "author": "Atomiton",
  "license": "MIT",
  "dependencies": {
    "@atomiton/store": "workspace:*",
    "@atomiton/events": "workspace:*",
    "@atomiton/nodes": "workspace:*",
    "@atomiton/ui": "workspace:*"
  },
  "devDependencies": {
    "@atomiton/eslint-config": "workspace:^",
    "@atomiton/typescript-config": "workspace:*",
    "@faker-js/faker": "^8.0.0",
    "@types/node": "^20.0.0",
    "concurrently": "^8.2.0",
    "eslint": "^9",
    "tsc-alias": "^1.8.16",
    "typescript": "^5",
    "vite": "^6.0.0",
    "vitest": "^2.0.0"
  }
}
