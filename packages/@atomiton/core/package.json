{
  "name": "@atomiton/core",
  "version": "0.1.0",
  "description": "Atomiton Blueprint core engine and state management",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "core",
    "blueprint",
    "automation",
    "workflow",
    "state-management"
  ],
  "author": "Atomiton",
  "license": "MIT",
  "dependencies": {
    "@atomiton/store": "workspace:*",
    "@atomiton/events": "workspace:*",
    "@atomiton/nodes": "workspace:*",
    "@atomiton/ui": "workspace:*"
  },
  "devDependencies": {
    "@atomiton/eslint-config": "workspace:^",
    "@atomiton/typescript-config": "workspace:*",
    "@faker-js/faker": "^8.0.0",
    "@types/node": "^20.0.0",
    "eslint": "^9",
    "typescript": "^5",
    "vite": "^6.0.0",
    "vitest": "^2.0.0"
  }
}
