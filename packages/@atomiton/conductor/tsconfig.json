{
  "extends": "@atomiton/typescript-config/library.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "types": ["node", "vitest/globals"],
    "paths": {
      "#core/*": ["./src/core/*"],
      "#browser/*": ["./src/browser/*"],
      "#desktop/*": ["./src/desktop/*"],
      "#shared/*": ["./src/shared/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.bench.ts"
  ]
}