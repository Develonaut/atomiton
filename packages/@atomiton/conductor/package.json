{
  "name": "@atomiton/conductor",
  "version": "0.2.0",
  "description": "Blueprint and node execution orchestrator for Atomiton",
  "type": "module",
  "private": true,
  "exports": {
    "./browser": {
      "import": "./dist/browser/index.js",
      "types": "./dist/browser/index.d.ts"
    },
    "./desktop": {
      "import": "./dist/desktop/index.js",
      "types": "./dist/desktop/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "imports": {
    "#core/*": "./src/core/*.ts",
    "#browser/*": "./src/browser/*.ts",
    "#desktop/*": "./src/desktop/*.ts",
    "#shared/*": "./src/shared/*.ts"
  },
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run --exclude src/__benchmarks__/**",
    "test:watch": "vitest watch"
  },
  "dependencies": {
    "@atomiton/events": "workspace:*",
    "@atomiton/nodes": "workspace:*",
    "@atomiton/storage": "workspace:*",
    "@atomiton/store": "workspace:*",
    "@atomiton/utils": "workspace:*",
    "p-queue": "^8.0.0"
  },
  "devDependencies": {
    "@atomiton/eslint-config": "workspace:*",
    "@atomiton/typescript-config": "workspace:*",
    "@atomiton/vite-config": "workspace:*",
    "@types/node": "catalog:",
    "electron": "^38.0.0",
    "eslint": "catalog:",
    "rollup-plugin-visualizer": "catalog:",
    "terser": "catalog:",
    "typescript": "catalog:",
    "vite": "catalog:",
    "vite-plugin-dts": "catalog:",
    "vitest": "catalog:"
  },
  "keywords": [
    "conductor",
    "orchestration",
    "execution",
    "workflow",
    "blueprint"
  ],
  "author": "Atomiton",
  "license": "MIT"
}
