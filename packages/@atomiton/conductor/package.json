{
  "name": "@atomiton/conductor",
  "version": "0.1.0",
  "description": "Central execution engine for atomic and composite nodes",
  "type": "module",
  "private": true,
  "sideEffects": false,
  "imports": {
    "#*": "./src/*"
  },
  "exports": {
    "./browser": {
      "import": "./dist/exports/browser/index.js",
      "types": "./dist/exports/browser/index.d.ts"
    },
    "./desktop": {
      "import": "./dist/exports/desktop/index.js",
      "types": "./dist/exports/desktop/index.d.ts"
    },
    "./types": {
      "import": "./dist/types/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "./test-utils/factories": {
      "import": "./dist/test-utils/factories.js",
      "types": "./dist/test-utils/factories.d.ts"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "vite build",
    "clean": "rm -rf dist",
    "dev": "vite build --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "conductor",
    "execution",
    "node",
    "flow",
    "orchestration"
  ],
  "author": "Atomiton",
  "license": "MIT",
  "dependencies": {
    "@atomiton/logger": "workspace:^",
    "@atomiton/nodes": "workspace:*",
    "@atomiton/rpc": "workspace:*",
    "@atomiton/utils": "workspace:*"
  },
  "devDependencies": {
    "@atomiton/eslint-config": "workspace:*",
    "@atomiton/typescript-config": "workspace:*",
    "@atomiton/vite-config": "workspace:*",
    "@types/node": "^20.0.0",
    "eslint": "^9",
    "terser": "^5.44.0",
    "typescript": "^5",
    "vite": "catalog:",
    "vitest": "catalog:"
  }
}
