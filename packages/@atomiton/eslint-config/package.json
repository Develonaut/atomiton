{
  "name": "@atomiton/eslint-config",
  "version": "0.1.0",
  "description": "Shared ESLint configurations for Atomiton projects",
  "type": "module",
  "private": true,
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./base": {
      "types": "./dist/base.d.ts",
      "default": "./dist/base.js"
    },
    "./react-internal": {
      "types": "./dist/react-internal.d.ts",
      "default": "./dist/react-internal.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "dev": "tsc --watch",
    "build": "tsc",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "lint": "echo 'Linting eslint-config itself'",
    "lint:fix": "echo 'Linting eslint-config itself with fix'",
    "test": "pnpm test:unit",
    "test:unit": "vitest run --passWithNoTests || echo \"No unit tests for config-only package\"",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "test:smoke": "mkdir -p test-results && vitest run 'smoke' --passWithNoTests --reporter=json > test-results/speed-report.json || echo \"No smoke tests yet\"",
    "test:benchmark": "vitest bench --run",
    "test:e2e": "echo \"No E2E tests for this package\"",
    "test:all": "pnpm test:unit && pnpm test:smoke && pnpm test:benchmark && pnpm test:e2e"
  },
  "keywords": [
    "eslint",
    "config",
    "linting",
    "typescript",
    "react"
  ],
  "author": "Atomiton",
  "license": "MIT",
  "devDependencies": {
    "@atomiton/typescript-config": "workspace:*",
    "@eslint/js": "^9.34.0",
    "@types/node": "catalog:",
    "eslint": "catalog:",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-turbo": "^2.5.0",
    "globals": "^16.3.0",
    "typescript": "catalog:",
    "typescript-eslint": "^8.40.0",
    "vitest": "catalog:"
  }
}
