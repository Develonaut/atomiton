{
  "name": "@atomiton/logger",
  "version": "0.0.1",
  "description": "Unified logging system for Atomiton platform",
  "type": "module",
  "exports": {
    "./browser": {
      "types": "./dist/browser/index.d.ts",
      "import": "./dist/browser/index.js",
      "require": "./dist/browser/index.cjs"
    },
    "./desktop": {
      "types": "./dist/desktop/index.d.ts",
      "import": "./dist/desktop/index.js",
      "require": "./dist/desktop/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "imports": {
    "#browser/*": "./src/browser/*",
    "#desktop/*": "./src/desktop/*",
    "#shared/*": "./src/shared/*"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "./scripts/tail-logs.sh",
    "dev:build": "vite build --watch",
    "build": "vite build",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "logs:tail": "./scripts/tail-logs.sh",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "electron-log": "^5.2.5",
    "tslog": "^4.9.3"
  },
  "devDependencies": {
    "@atomiton/eslint-config": "workspace:*",
    "@atomiton/typescript-config": "workspace:*",
    "@atomiton/vite-config": "workspace:*",
    "@types/node": "catalog:",
    "eslint": "catalog:",
    "rollup-plugin-visualizer": "catalog:",
    "terser": "catalog:",
    "typescript": "catalog:",
    "vite": "catalog:",
    "vite-plugin-dts": "catalog:"
  }
}
