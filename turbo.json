{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": ["NODE_ENV", "HOME", "USERPROFILE", "APPDATA", "JEST_WORKER_ID"]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "env": ["NODE_ENV", "HOME", "USERPROFILE", "APPDATA", "JEST_WORKER_ID"]
    },
    "check-types": {
      "dependsOn": ["^check-types"],
      "env": ["NODE_ENV", "HOME", "USERPROFILE", "APPDATA", "JEST_WORKER_ID"]
    },
    "typecheck": {
      "dependsOn": ["^typecheck"],
      "env": ["NODE_ENV", "HOME", "USERPROFILE", "APPDATA", "JEST_WORKER_ID"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
