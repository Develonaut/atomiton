{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": [
        "NODE_ENV",
        "HOME",
        "USERPROFILE",
        "APPDATA",
        "JEST_WORKER_ID",
        "ELECTRON_RENDERER_URL",
        "CI",
        "PLAYWRIGHT_BASE_URL"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "env": [
        "NODE_ENV",
        "HOME",
        "USERPROFILE",
        "APPDATA",
        "JEST_WORKER_ID",
        "ELECTRON_RENDERER_URL",
        "CI",
        "PLAYWRIGHT_BASE_URL"
      ]
    },
    "lint:fix": {
      "dependsOn": ["^lint:fix"],
      "env": [
        "NODE_ENV",
        "HOME",
        "USERPROFILE",
        "APPDATA",
        "JEST_WORKER_ID",
        "ELECTRON_RENDERER_URL",
        "CI",
        "PLAYWRIGHT_BASE_URL"
      ]
    },
    "check-types": {
      "dependsOn": ["^check-types"],
      "env": [
        "NODE_ENV",
        "HOME",
        "USERPROFILE",
        "APPDATA",
        "JEST_WORKER_ID",
        "ELECTRON_RENDERER_URL",
        "CI",
        "PLAYWRIGHT_BASE_URL"
      ]
    },
    "typecheck": {
      "dependsOn": ["^typecheck"],
      "env": [
        "NODE_ENV",
        "HOME",
        "USERPROFILE",
        "APPDATA",
        "JEST_WORKER_ID",
        "ELECTRON_RENDERER_URL",
        "CI",
        "PLAYWRIGHT_BASE_URL"
      ]
    },
    "test": {
      "dependsOn": ["^test"],
      "env": [
        "NODE_ENV",
        "HOME",
        "USERPROFILE",
        "APPDATA",
        "JEST_WORKER_ID",
        "CI"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "watch": {
      "cache": false,
      "persistent": false
    }
  }
}
