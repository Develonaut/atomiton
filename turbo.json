{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "concurrency": "15",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", "out/**"],
      "env": [
        "NODE_ENV",
        "HOME",
        "USERPROFILE",
        "APPDATA",
        "JEST_WORKER_ID",
        "ELECTRON_RENDERER_URL",
        "CI",
        "PLAYWRIGHT_BASE_URL",
        "PLAYWRIGHT_HEADED",
        "LEFTHOOK",
        "BUILD_TARGET",
        "ATOMITON_LOG_PATH",
        "ATOMITON_DESKTOP",
        "DEBUG"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "env": [
        "NODE_ENV",
        "MODE",
        "DEV",
        "HOME",
        "USERPROFILE",
        "APPDATA",
        "JEST_WORKER_ID",
        "ELECTRON_RENDERER_URL",
        "CI",
        "PLAYWRIGHT_BASE_URL",
        "PLAYWRIGHT_HEADED",
        "LEFTHOOK",
        "BUILD_TARGET"
      ]
    },
    "lint:fix": {
      "dependsOn": ["^lint:fix"],
      "env": [
        "NODE_ENV",
        "DEV",
        "HOME",
        "USERPROFILE",
        "APPDATA",
        "JEST_WORKER_ID",
        "ELECTRON_RENDERER_URL",
        "CI",
        "PLAYWRIGHT_BASE_URL",
        "PLAYWRIGHT_HEADED",
        "LEFTHOOK",
        "BUILD_TARGET"
      ]
    },
    "typecheck": {
      "dependsOn": ["^typecheck"],
      "env": [
        "NODE_ENV",
        "HOME",
        "USERPROFILE",
        "APPDATA",
        "JEST_WORKER_ID",
        "ELECTRON_RENDERER_URL",
        "CI",
        "PLAYWRIGHT_BASE_URL",
        "PLAYWRIGHT_HEADED",
        "LEFTHOOK",
        "BUILD_TARGET"
      ]
    },
    "test": {
      "dependsOn": ["@atomiton/vite-config#build"],
      "inputs": [
        "src/**",
        "test/**",
        "tests/**",
        "__tests__/**",
        "*.test.*",
        "*.spec.*",
        "package.json",
        "tsconfig.json",
        "vitest.config.*"
      ],
      "outputs": ["coverage/**", ".vitest-cache/**", "test-results/**"],
      "env": ["NODE_ENV", "CI"]
    },
    "test:integration": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**",
        "test/**",
        "tests/**",
        "__tests__/**",
        "*.integration.*",
        "*.int.*",
        "package.json",
        "tsconfig.json",
        "vitest.config.*",
        "vitest.integration.config.*",
        "playwright.config.*"
      ],
      "outputs": ["test-results/**", "coverage/**"],
      "env": ["NODE_ENV", "CI", "PLAYWRIGHT_BASE_URL"]
    },
    "test:e2e": {
      "dependsOn": ["build"],
      "inputs": [
        "e2e/**",
        "tests/e2e/**",
        "playwright.config.*",
        "package.json"
      ],
      "outputs": ["test-results/**", "playwright-report/**"],
      "cache": false,
      "env": ["NODE_ENV", "CI", "PLAYWRIGHT_BASE_URL", "PLAYWRIGHT_WORKERS"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "dev#@atomiton/client": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "dev#@atomiton/desktop": {
      "cache": false,
      "persistent": true,
      "dependsOn": [
        "@atomiton/client#dev",
        "@atomiton/editor#dev",
        "@atomiton/rpc#dev",
        "^build"
      ]
    },
    "watch": {
      "cache": false,
      "persistent": false
    }
  }
}
