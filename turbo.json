{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "concurrency": "15",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", "out/**"],
      "env": [
        "NODE_ENV",
        "HOME",
        "USERPROFILE",
        "APPDATA",
        "JEST_WORKER_ID",
        "ELECTRON_RENDERER_URL",
        "CI",
        "PLAYWRIGHT_BASE_URL",
        "PLAYWRIGHT_HEADED",
        "LEFTHOOK",
        "BUILD_TARGET"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "env": [
        "NODE_ENV",
        "DEV",
        "HOME",
        "USERPROFILE",
        "APPDATA",
        "JEST_WORKER_ID",
        "ELECTRON_RENDERER_URL",
        "CI",
        "PLAYWRIGHT_BASE_URL",
        "PLAYWRIGHT_HEADED",
        "LEFTHOOK",
        "BUILD_TARGET"
      ]
    },
    "lint:fix": {
      "dependsOn": ["^lint:fix"],
      "env": [
        "NODE_ENV",
        "DEV",
        "HOME",
        "USERPROFILE",
        "APPDATA",
        "JEST_WORKER_ID",
        "ELECTRON_RENDERER_URL",
        "CI",
        "PLAYWRIGHT_BASE_URL",
        "PLAYWRIGHT_HEADED",
        "LEFTHOOK",
        "BUILD_TARGET"
      ]
    },
    "check-types": {
      "dependsOn": ["^check-types"],
      "env": [
        "NODE_ENV",
        "HOME",
        "USERPROFILE",
        "APPDATA",
        "JEST_WORKER_ID",
        "ELECTRON_RENDERER_URL",
        "CI",
        "PLAYWRIGHT_BASE_URL",
        "PLAYWRIGHT_HEADED",
        "LEFTHOOK",
        "BUILD_TARGET"
      ]
    },
    "typecheck": {
      "dependsOn": ["^typecheck"],
      "env": [
        "NODE_ENV",
        "HOME",
        "USERPROFILE",
        "APPDATA",
        "JEST_WORKER_ID",
        "ELECTRON_RENDERER_URL",
        "CI",
        "PLAYWRIGHT_BASE_URL",
        "PLAYWRIGHT_HEADED",
        "LEFTHOOK",
        "BUILD_TARGET"
      ]
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**",
        "test/**",
        "tests/**",
        "__tests__/**",
        "*.test.*",
        "*.spec.*",
        "package.json",
        "tsconfig.json",
        "vitest.config.*"
      ],
      "outputs": ["coverage/**"],
      "env": [
        "NODE_ENV",
        "HOME",
        "USERPROFILE",
        "APPDATA",
        "JEST_WORKER_ID",
        "CI"
      ]
    },
    "test:unit": {
      "dependsOn": [],
      "inputs": ["src/**", "package.json", "tsconfig.json", "vitest.config.ts"],
      "outputs": ["coverage/**"],
      "env": ["NODE_ENV", "CI"]
    },
    "test:smoke": {
      "dependsOn": [],
      "cache": false,
      "env": ["NODE_ENV", "CI"]
    },
    "test:benchmark": {
      "dependsOn": [],
      "inputs": [
        "src/**",
        "package.json",
        "tsconfig.json",
        "vitest.config.ts",
        "vitest.benchmark.config.ts"
      ],
      "outputs": ["benchmark-results/**"],
      "env": ["NODE_ENV", "CI"]
    },
    "test:e2e": {
      "dependsOn": ["build"],
      "inputs": [
        "e2e/**",
        "tests/e2e/**",
        "playwright.config.*",
        "package.json"
      ],
      "outputs": ["test-results/**", "playwright-report/**"],
      "cache": false,
      "env": ["NODE_ENV", "CI", "PLAYWRIGHT_BASE_URL", "PLAYWRIGHT_WORKERS"]
    },
    "test:all": {
      "dependsOn": ["build"],
      "cache": false,
      "env": ["NODE_ENV", "CI"]
    },
    "test:watch": {
      "dependsOn": [],
      "cache": false,
      "persistent": true,
      "env": ["NODE_ENV"]
    },
    "test:integration": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**",
        "test/**",
        "tests/**",
        "__tests__/**",
        "*.integration.*",
        "*.int.*",
        "package.json",
        "tsconfig.json",
        "vitest.config.*",
        "vitest.integration.config.*",
        "playwright.config.*"
      ],
      "outputs": ["test-results/**", "coverage/**"],
      "env": ["NODE_ENV", "CI", "PLAYWRIGHT_BASE_URL"]
    },
    "test:coverage": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**", ".nyc_output/**"],
      "env": ["NODE_ENV", "CI"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "dev#@atomiton/client": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "dev#@atomiton/desktop": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["@atomiton/client#dev", "@atomiton/editor#dev", "@atomiton/rpc#dev", "^build"]
    },
    "watch": {
      "cache": false,
      "persistent": false
    },
    "validate": {
      "inputs": ["package.json", "tsconfig.json", "vite.config.ts", "src/**"],
      "outputs": [],
      "cache": false,
      "env": ["NODE_ENV"]
    },
    "validate:packages": {
      "inputs": ["package.json", "**/package.json"],
      "outputs": [],
      "cache": false,
      "env": ["NODE_ENV"]
    }
  }
}
