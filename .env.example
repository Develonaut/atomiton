# Application Ports
VITE_CLIENT_PORT=5173
VITE_UI_PORT=5174
VITE_DESKTOP_RENDERER_PORT=5175

# API Ports
API_PORT=3000
WEBSOCKET_PORT=8080

# Electron Configuration
# In development: URL of the local dev server (default: http://localhost:5173)
# In production: URL of the CDN-hosted app (default: https://app.atomiton.com)
ELECTRON_RENDERER_URL=http://localhost:5173

# Build Configuration
NODE_ENV=development

# Feature Flags
ENABLE_HOT_RELOAD=true
ENABLE_DEBUG_MODE=true

# File System Configuration
# Desktop output path for file operations (use absolute path like /Users/YourName/Desktop or leave as .tmp for default)
VITE_OUTPUT_PATH=.tmp

# Production Configuration (override in .env.production)
# NODE_ENV=production
# ELECTRON_RENDERER_URL=file://../renderer/index.html